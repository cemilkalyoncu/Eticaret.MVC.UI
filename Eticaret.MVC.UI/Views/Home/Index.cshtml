@using Eticaret.Entities
@using Eticaret.MVC
@model List<Note>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row carousel-holder">
    <div class="col-md-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="slide-image" src="http://www.wolftradeclub.com.br/wp-content/uploads/2018/11/Banner-Blog-Wolf-Trade-Club-O-QUE-%C3%89-DAY-TRADE-1110x292-800x300.png" alt="">
                </div>
                <div class="item">
                    <img class="slide-image" src="http://www.wolftradeclub.com.br/wp-content/uploads/2018/08/Banner-Blog-Wolf-Trade-Club-Conta-Demo-800x3001-800x300.png" alt="">
                </div>
                <div class="item">
                    <img class="slide-image" src="http://www.wolftradeclub.com.br/wp-content/uploads/2018/08/Banner-Blog-Wolf-Trade-Club-Imposto-de-Renda-1110x292-800x300.jpg" alt="">
                </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>

<hr>
<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_PartialCategory");
        </div>
        <div class="col-md-9">
            <div class="row">
                @*Yazılar*@
                @foreach (Note note in Model)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4" data-note-id="@note.Id">
                        <div class="thumbnail">
                            <img src="https://vnmtqcjsxa-flywheel.netdna-ssl.com/wp-content/uploads/2019/03/piper2-320x150.jpg" alt="@note.Title">
                            <div class="caption">
                                <h4>
                                    <a href="#" data-toggle="modal" data-target="#modal_comment"
                                       data-note-id="@note.Id">@note.Title</a>
                                </h4>
                                <h6 class="text-right">
                                    @note.Owner.UserName
                                    <span class="glyphicon glyphicon-user"></span> <br />
                                    @note.ModifiedOn.ToString("dd.MM.yy HH.mm")
                                    <span class="glyphicon glyphicon-time"></span>
                                </h6>
                                @if (string.IsNullOrEmpty(note.Text) == false && note.Text.Length > 70)
                                {

                                    <p>@(note.Text.Substring(0, 70) + "...")</p>
                                    <p class="pull-right">
                                        <a href="#" data-toggle="modal"
                                           data-target="#modal_notedetail" data-note-id="@note.Id" class="btn btn-default btn-sm">
                                            devamı
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                        </a>
                                    </p>
                                }
                                else
                                {
                                    <p>@note.Text</p>
                                }

                            </div>
                            <div class="ratings">
                                <p class="pull-right">
                                    <button class="btn btn-default btn-sm" data-toggle="modal"
                                            data-target="#modal_comment" data-note-id="@note.Id">
                                        <span class="glyphicon glyphicon-comment"></span> Yorumlar
                                    </button>
                                </p>
                                <p>
                                    <button class="btn btn-default btn-sm" data-liked="false"
                                            data-note-id="@note.Id">
                                        <span class="glyphicon glyphicon-star-empty like-star"></span>&nbsp;
                                        <span class="like-count"> @note.LikeCount</span>
                                    </button>
                                </p>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- /.container -->
@section footer{
    @Html.Partial("_PartialFooter")
}
@_Bootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")
@_Bootstrap.ModalPopup(id: "modal_notedetail", title: "Not Detayı")

<script src="~/Scripts/comment.js"></script>
<script src="~/Scripts/like.js"></script>
<script src="~/Scripts/notedetailpopup.js"></script>

