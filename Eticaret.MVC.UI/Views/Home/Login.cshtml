@using Eticaret.Entities.ValueObjects
@model loginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Giriş Sayfası";
}
@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kullanıcı Girişi</h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Parola", type = "password" })

                    </div>

                    <div class="checkbox">
                        <label class="remember">
                            <input name="remember" type="checkbox"> Beni Hatırla
                        </label>
                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Giriş</button>
                    </div>


                </div>
            </div>
        </div>
    </section>
}
