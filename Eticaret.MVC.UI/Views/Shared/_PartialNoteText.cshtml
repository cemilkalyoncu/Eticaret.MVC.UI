@using Eticaret.Entities
@model Note



<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">@Model.Title</h3>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12 text-right ">
        <span class="glyphicon glyphicon-user">@Model.Owner.UserName</span>
        <span class="glyphicon glyphicon-time">@Model.Owner.ModifiedOn</span>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text
        </p>
    </div>

</div>