@using Eticaret.MVC.UI.ViewModels
@using Eticaret.Entities.Message
@model ErrorViewModel
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center "> @Model.Header</h1>
            </div>
            <div class="main-content">
                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;&nbsp;&nbsp; @Model.Title</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (ErrorMessageObj message in Model.Items)
                        {
                            @message.Messages
                            <br />
                        }

                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
@{
    string javaScript = string.Empty;
    if (Model.IsRedirecting)
    {
        javaScript = "setTimeout(function () {window.location = '" +
            Model.RedirectingUrl + "';}," + Model.RedirectingTimeout + "); ";
    }
}
<script>
    $(function () {
        @Html.Raw(javaScript);
    });
</script>